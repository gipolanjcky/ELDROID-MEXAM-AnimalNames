<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnimalDetailsActivity">


    <ImageButton
        android:id="@+id/backButton"
        android:src="@drawable/back_button"
        android:layout_width="48dp"
        android:layout_height="48dp" />

    <TextView
        android:text="Animal details"
        android:id="@+id/animalDetailsTitle"
        android:layout_width="170dp"
        android:layout_height="48dp"
        android:layout_toEndOf="@id/backButton"
        android:layout_marginStart="8dp"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Animal Name"
        android:layout_below="@+id/animalDetailsTitle" />

    <TextView
        android:id="@+id/animalDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="22sp"
        android:layout_below="@+id/nameTextView"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Description"/>


    <Button
        android:id="@+id/blockAnimalButton"
        android:text="Block Animal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_border"/>

</RelativeLayout>